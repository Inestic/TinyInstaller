<UserControl x:Class="TinyInstaller.Views.ConditionTryFixView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uc="clr-namespace:TinyInstaller.UserControls"
             xmlns:local="clr-namespace:TinyInstaller.Views"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Thickness x:Key="StandartMargin" Left="20" Top="0" Right="20" Bottom="20" />
        <CollectionViewSource x:Key="ConditionsToFix" Source="{Binding ConditionsToFix}" />
        <Style TargetType="{x:Type local:ConditionTryFixView}">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Background" Value="{DynamicResource Brush.Window.Background.Normal}" />
            <Setter Property="Foreground" Value="{DynamicResource Brush.Window.Foreground.Normal}" />
        </Style>
        <Style TargetType="{x:Type Grid}">
            <Setter Property="Background" Value="{Binding Path=Background, RelativeSource={RelativeSource TemplatedParent}}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type StackPanel}">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <UserControl.Template>
        <ControlTemplate>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <uc:LoadingIndicator Grid.Row="0"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"
                                     Opacity="0.7" />

                <ItemsControl ItemsSource="{Binding Source={StaticResource ConditionsToFix}}"
                              Grid.Row="1">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <uc:SlidingPanel Header="{Binding Name}"
                                             Description="{Binding Description}"
                                             Margin="0, 10, 0, 10" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <uc:FilledButton Grid.Row="2"
                                 Text="{DynamicResource Localization.StartupCondition.FixIt}"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center" />
            </Grid>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>