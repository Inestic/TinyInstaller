<Window x:Class="TinyInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:common="clr-namespace:TinyInstaller.Common"
        xmlns:controls="clr-namespace:TinyInstaller.UserControls"
        xmlns:views="clr-namespace:TinyInstaller.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged">

    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="WindowStyle" Value="None" />
            <Setter Property="AllowsTransparency" Value="False" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="ResizeMode" Value="CanResize" />
            <Setter Property="ShowInTaskbar" Value="True" />
            <Setter Property="MinHeight" Value="615" />
            <Setter Property="MinWidth" Value="1074" />
            <Setter Property="Height" Value="615" />
            <Setter Property="Width" Value="1074" />
            <Setter Property="Background" Value="{DynamicResource Window.Background.Normal}" />
            <Setter Property="Foreground" Value="{DynamicResource Window.Foreground.Normal}" />
            <Setter Property="Title">
                <Setter.Value>
                    <MultiBinding StringFormat="{}{0} {1}">
                        <Binding Path="AppName" />
                        <Binding Path="AppVersion" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome CaptionHeight="0"
                      CornerRadius="0"
                      GlassFrameThickness="0"
                      ResizeBorderThickness="2" />
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>
    <Window.Resources>
        <Thickness x:Key="StandartTextInterval" Right="5" Top="5" Left="5" Bottom="5" />
        <Style TargetType="Border" x:Key="WindowBorderStyle">
            <Setter Property="BorderBrush" Value="{DynamicResource Window.Accent.Normal}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        <Style TargetType="{x:Type TextBlock}" x:Key="RegularText">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
            <Setter Property="TextOptions.TextRenderingMode" Value="Auto" />
            <Setter Property="FontFamily" Value="{StaticResource Comfortaa}" />
            <Setter Property="FontWeight" Value="Regular" />
            <Setter Property="FontSize" Value="18" />
        </Style>
    </Window.Resources>
    <Border Style="{StaticResource WindowBorderStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <controls:WindowTitle Grid.Row="0" Background="{DynamicResource Window.Background.Light}" />
            <views:LoadingView x:Name="LoadingView" Grid.Row="1" />
            <views:StartupTestTemplate x:Name="ConfigFileExistTestView"
                                       Grid.Row="1"
                                       Tag="{x:Static common:Page.ConfigFileNotFoundView}">
                <views:StartupTestTemplate.Content>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="{StaticResource StandartTextInterval}">
                            <TextBlock Style="{DynamicResource RegularText}"
                                   Text="{DynamicResource Localization.Test.NoConfigFileExist.Header}"
                                   Foreground="{DynamicResource Window.Accent.Normal}"
                                   Margin="{StaticResource StandartTextInterval}"
                                   HorizontalAlignment="Center" />

                            <controls:HelpButton Command="{Binding HyperlinkClickedCommand}"
                                                 Margin="0, -2, 0, 0" />
                        </StackPanel>

                        <controls:TextedButton Text="{DynamicResource Localization.Test.NoConfigFileExist.CreateConfig}"
                                               Margin="{StaticResource StandartTextInterval}"
                                               HorizontalAlignment="Center"
                                               Command="{Binding CreateConfigurationFileCommand}" />
                    </StackPanel>
                </views:StartupTestTemplate.Content>
            </views:StartupTestTemplate>
            <Grid Grid.Row="2" Background="{DynamicResource Window.Background.Light}" />
        </Grid>
    </Border>
</Window>